COPA_CAMPEON				VARCHAR(14)
COPA_ETAPA					VARCHAR(14)
COPA_PAISES_PARTICIPANTES	

U_ID_UP		VARCHAR(14) CONSTRAINT PK_UNIDAD_PATRULLAJE PRIMARY KEY,
U_ZONA		VARCHAR(40) 
);

CREATE TABLE COPA_PAISES(
U_ID_UP		VARCHAR(14) CONSTRAINT PK_UNIDAD_PATRULLAJE PRIMARY KEY,
U_ZONA		VARCHAR(40) 
);

CREATE TABLE COPA_ETAPA(
U_ID_UP		VARCHAR(14) CONSTRAINT PK_UNIDAD_PATRULLAJE PRIMARY KEY,
U_ZONA		VARCHAR(40) 
);

