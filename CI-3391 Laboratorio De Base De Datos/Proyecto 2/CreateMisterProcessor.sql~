U_ID_UP		VARCHAR(14) CONSTRAINT PK_UNIDAD_PATRULLAJE PRIMARY KEY,
U_ZONA		VARCHAR(40) 
);

CREATE TABLE ARBITRO(
U_ID_UP		VARCHAR(14) CONSTRAINT PK_UNIDAD_PATRULLAJE PRIMARY KEY,
U_ZONA		VARCHAR(40) 
);

CREATE TABLE COPA(
COPA_NOMBRE					VARCHAR(14) CONSTRAINT PK_COPA PRIMARY KEY
