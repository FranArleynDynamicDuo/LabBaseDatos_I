CREATE TABLE AMONESTA(

AM_ID_PARTIDO 				INTEGER,		-- IDENTIFICACION UNICA PARA CADA
											-- PARTIDO DENTRO DE UNA COMPETENCIA
AM_NOMBRECOMP 				VARCHAR(40),	-- NOMBRE DE LA COMPETENCIA A LA QUE
											-- PERTENCE EL PARTIDO
AM_TEMPORADA 				INTEGER,		-- TEMPORADA A LA QUE PERTENCE EL
											-- PARTIDO
AM_NOMBRE_JUGADOR 			VARCHAR(40),	-- NOMBRE DEL JUGADOR AMONESTADO
AM_AMARILLA_ROJA 			VARCHAR(14),	-- TIPO DE AMONESTACION
AM_MINUTO 					TIMESTAMP		-- MINUTO EN EL QUE OCURRE LA 
											-- AMONESTACION
);

CREATE TABLE ANOTA_GOL(
	
AG_NOMBRE_JUGADOR 			VARCHAR(40),	-- NOMBRE DEL GOLEADOR
AG_ID_PARTIDO				INTEGER,		-- IDENTIFICACION UNICA PARA CADA
											-- PARTIDO DENTRO DE UNA COMPETENCIA 
AG_NOMBRECOMP				VARCHAR(40),	-- NOMBRE DE LA COMPETENCIA A LA QUE
											-- PERTENCE EL PARTIDO
AG_TEMPORADA				INTEGER,		-- TEMPORADA A LA QUE PERTENCE EL
											-- PARTIDO
AG_MINUTO					TIMESTAMP,		-- MINUTO EN EL QUE OCURRE EL GOL
AG_TIPO						VARCHAR(20),	-- TIPO DE GOL ANOTADO (PIE,CABEZA,
											-- ETC)
AG_ASISTENTE				VARCHAR(40) null -- NOMBRE DEL JUGADOR ASISTENTE
											 -- EN EL GOL SI ES QUE EXISTE
);

CREATE TABLE ARBITRO(

AR_NOMBRE					VARCHAR(40),	-- NOMBRE DEL ARBITRO
AR_NACIONALIDAD				VARCHAR(20)		-- NACIONALIDAD DEL ARBITRO
);

CREATE TABLE COMPETENCIA(

COM_NOMBRE 					VARCHAR(40),	-- NOMBRE DE LA COMPETENCIA
COM_TEMPORADA				INTEGER,		-- TEMPORADA DE DICHA COMPETENCIA
COM_ORGANIZACION			VARCHAR(40),	-- ORGANIZACION QUE SE ENCARGAR DE
											-- ORGANIZAR LA COMPETENCIA
COM_N_TROFEO				VARCHAR(40),	-- NOMBRE DEL TROFEO OTORGADO AL
											-- GANADOR
COM_TIPO					VARCHAR(4),		-- TIPO DE COMPETENCIA											
COM_CAMPEON					VARCHAR(40),	-- GANADOR DE LA COMPETENCIA
COM_LIGA					VARCHAR(10) null,	-- ATRIBUTO QUE DEFINE SI LA
												-- COMPETENCIA ES UNA LIGA 
COM_COPA					VARCHAR(10) null	-- ATRIBUTO QUE DEFINE SI LA
												-- COMPETENCIA ES UNA COPA 
);


CREATE TABLE COPA(

CO_NOMBRE					VARCHAR(40),	-- NOMBRE DE LA COPA (CLAVE FORANEA)
CO_TEMPORADA				INTEGER			-- TEMPORADA DE LA COPA (CLAVE
											-- FORANEA)
);

CREATE TABLE COPA_PAISES(

CP_NOMBRE					VARCHAR(40),	-- NOMBRE DE LA COPA (CLAVE FORANEA)
CP_TEMPORADA				INTEGER,		-- TEMPORADA DE LA COPA (CLAVE
											-- FORANEA)
CP_PAISES					VARCHAR(40)		-- LISTA DE PAISES QUE PARTICIPAN EN
											-- LA COPA
);

CREATE TABLE COPA_ETAPA( 

CE_NOMBRE				VARCHAR(40),		-- NOMBRE DE LA COPA (CLAVE FORANEA)
CE_TEMPORADA			INTEGER,			-- TEMPORADA DE LA COPA (CLAVE
											-- FORANEA)
CE_ETAPA				VARCHAR(40)			-- LISTA DE ETAPAS EN LA COPA
);

CREATE TABLE CLUB(
CL_NOMBRE_CLUB				VARCHAR(40),	-- NOMBRE DEL CLUB
CL_CIUDAD					VARCHAR(40),	-- CIUDAD EN LA QUE SE ENCUENTRA EL
											-- CLUB
CL_AÑO_F					INTEGER,		-- AÑO DE FUNDACION
CL_PAIS						VARCHAR(40),	-- PAIS EN EL QUE SE ENCUENTRA
CL_NOMBRE_ENT 				VARCHAR(40),	-- NOMBRE DEL ENTRENADOR ACTUAL
CL_F_INICIO_ENT 			INTEGER,		-- FECHA EN LA QUE EMPEZO COMO 
											-- ENTRENADOR
CL_F_FINAL_ENT				INTEGER		-- FECHA EN LA QUE TERMINA SU
											-- CONTRATO
);

CREATE TABLE ESTADIO(

ES_NOMBRE					VARCHAR(40),	-- NOMBRE DE ESTADIO
ES_NOMBRE_CLUB				VARCHAR(40),	-- NOMBRE DEL CLUB QUE TIENE CASA EN
											-- EL ESTADIO
ES_CAPACIDAD 				INTEGER			-- CAPACIDAD PARA ESPECTADORES DEL
											-- ESTADIO
);

CREATE TABLE JUEGA(

JA_NOMBRE					VARCHAR(40),	-- NOMBRE DEL JUGADOR
JA_ID						INTEGER,		-- IDENTIFICACION DEL PARTIDO
JA_NOMBRECOMP				VARCHAR(40),	-- NOMBRE DE LA COMPETENCIA EN LA 
											-- QUE SE ENCUENTRA EL PARTIDO
JA_TEMPORADA				INTEGER,		-- TEMPORADA EN LA QUE SE ENCUENTRA
											-- LA COMPETENCIA
JA_I_MINUTO					INTEGER,		-- MINUTO EN EL QUE ENTRADA AL JUEGO
JA_F_MINUTO					INTEGER,		-- MINUTO EN EL QUE EL JUGADOR SALE
											-- DEL JUEGO
JA_POSICION					VARCHAR(20)		-- LA POSICION EN LA QUE JUEGA
);

CREATE TABLE JUGADOR(

JR_NOMBRE					VARCHAR(40),	-- NOMBRE DEL JUGADOR
JR_CLUB 					VARCHAR(40),	-- CLUB EN EL QUE JUEGA
JR_ALT						INTEGER,		-- ESTATURA DEL JUGADOR
JR_F_NACIMIENTO				INTEGER,		-- FECHA DE NACIMIENTO
JR_DIE_ZUR					VARCHAR(12),	-- INDICA SI EL JUGADOR ES DIESTRO
											-- O ZURDO
JR_NACIONALIDAD				VARCHAR(20),	-- NACIONALIDAD DEL JUGADOR
JR_PESO						INTEGER,		-- PESO DEL JUGADOR
JR_F_INI					INTEGER,		-- FECHA EN LA QUE INICIO SU 
											-- CONTRATO CON SU CLUB ACTUAL
JR_F_FIN					INTEGER,		-- FECHA EN LA QUE TERMINA DICHO
											-- CONTRATO
JR_RECISION					INTEGER,		-- PAGO QUE DEBE EFECTUAR OTRO CLUB
											-- PARA CONSEGUIR AL JUGADOR ANTES
											-- DE QUE TERMINE SU CONTRATO
JR_SALARIO					INTEGER			-- CANTIDAD QUE SE LE PAGA AL 
											-- JUGADOR
 
);

CREATE TABLE LIGA(

LG_NOMBRE					VARCHAR(40),	-- NOMBRE DE LA LIGA
LG_TEMPORADA				INTEGER,		-- TEMPORADA DE LA LIGA
LG_N_JORNADA				INTEGER,		-- NUMERO DE JORNADAS EN LA LIGA
LG_PAIS						VARCHAR(40)		-- PAIS EN EL QUE CUAL SE JUEGA LA 
											-- LIGA EJ: LA LIGA ESPAÑOLA
);

CREATE TABLE PARTIDO(

PD_ID						INTEGER,		-- IDENTIFICACION UNICA PARA CADA
											-- PARTIDO DENTRO DE UNA COMPETENCIA	
PD_NOMBRECOMP				VARCHAR(40),	-- NOMBRE DE LA COMPETENCIA EN LA 
											-- QUE SE ENCUENTRA EL PARTIDO
PD_TEMPORADA				INTEGER,		-- TEMPORADA
PD_NOMBRE_LOCAL				VARCHAR(40),	-- CLUB QUE JUEGA COMO LOCAL
PD_NOMBRE_VIS				VARCHAR(40),	-- CLUB QUE JUEGA COMO VISITANTE
PD_GANADOR					VARCHAR(40),	-- CLUB GANADOR DEL PARTIDO
PD_MARCADOR					VARCHAR(4),		-- MARCADOR RESULTANTE DEL PARTIDO
PD_FECHA					TIMESTAMP,		-- FECHA EN LA QUE SE JUEGA EL 
											-- PARTIDO
PD_ASISTENCIA				INTEGER,		-- ASISTENCIA DE ESPECTADORES PARA
											-- EL PARTIDO
PD_NOMBRE_ARB				VARCHAR(40)		-- NOMBRE DEL ARBITRO QUE MODERA
											-- EL PARTIDO
);
